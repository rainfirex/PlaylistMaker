<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeButton">
        <item name="android:layout_width">@dimen/dp_50</item>
        <item name="android:layout_height">@dimen/dp_4</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:background">@drawable/shape_btn_bottom_sheet</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp_30</item>
        <item name="android:textSize">@dimen/sp_19</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TextViewTitleColor" parent="TextViewTitle">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="ImageViewPlaylist">
        <item name="android:layout_width">@dimen/dp_45</item>
        <item name="android:layout_height">@dimen/dp_45</item>
        <item name="android:layout_marginStart">@dimen/dp_13</item>
        <item name="android:layout_marginVertical">@dimen/dp_8</item>
        <item name="android:layout_marginEnd">@dimen/dp_8</item>
        <item name="srcCompat">@drawable/ic_album_image_placeholder_312</item>
    </style>

    <style name="TextViewNamePlaylist">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:layout_marginEnd">@dimen/dp_12</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextViewNamePlaylistColor" parent="TextViewNamePlaylist">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewPlaylistCount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextViewPlaylistCountColor" parent="TextViewPlaylistCount">
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>