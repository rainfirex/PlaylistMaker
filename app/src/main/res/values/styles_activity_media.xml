<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabLayout" parent="">
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
    </style>
    <style name="TabLayoutWithColor" parent="TabLayout">
        <item name="tabTextColor">@color/dark</item>
        <item name="tabIndicatorColor">@color/dark</item>
        <item name="tabRippleColor">@color/blue</item>
    </style>

    <style name="ButtonNewPlaylist" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp_24</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="cornerRadius">@dimen/dp_54</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ButtonNewPlaylistWithColor" parent="ButtonNewPlaylist">
        <item name="android:backgroundTint">@color/dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ImageNoData">
        <item name="android:layout_width">@dimen/dp_120</item>
        <item name="android:layout_height">@dimen/dp_120</item>
        <item name="android:layout_marginTop">@dimen/dp_46</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextViewNoData">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/sp_19</item>
    </style>
    <style name="TextViewNoDataWithColor" parent="TextViewNoData">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ImageNewPlaylist">
        <item name="android:layout_width">@dimen/dp_312</item>
        <item name="android:layout_height">@dimen/dp_312</item>
        <item name="android:layout_marginStart">@dimen/dp_24</item>
        <item name="android:layout_marginTop">@dimen/dp_24</item>
        <item name="android:layout_marginEnd">@dimen/dp_24</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/ic_add_image_100</item>
        <item name="android:background">@drawable/shape_border_image_new_playlist</item>
    </style>

    <style name="EditTextNewPlaylist">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dp_18</item>
        <item name="android:paddingBottom">@dimen/dp_19</item>
        <item name="android:paddingHorizontal">@dimen/dp_16</item>
        <item name="android:layout_marginHorizontal">@dimen/dp_16</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">text</item>
    </style>
    <style name="EditTextNewPlaylistWithColor" parent="EditTextNewPlaylist">
        <item name="android:background">@drawable/shape_border_edit_text_new_playlist</item>
        <item name="android:textColorHint">@color/dark</item>
    </style>

    <style name="ButtonCreatePlaylist" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dp_32</item>
        <item name="android:layout_marginHorizontal">@dimen/dp_17</item>
        <item name="android:paddingVertical">@dimen/dp_12</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:background">@drawable/shape_border_button_create_playlist</item>
        <item name="android:enabled">false</item>
    </style>
    <style name="ButtonCreatePlaylistWithColor" parent="ButtonCreatePlaylist">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ImageViewGridPlaylist">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/ic_track_placeholder_45</item>
    </style>

    <style name="TextViewGridNamePlaylist">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextViewGridNamePlaylistColor" parent="TextViewGridNamePlaylist">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="TextViewGridPlaylistCount">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="TextViewGridPlaylistCountColor" parent="TextViewGridPlaylistCount">
        <item name="android:textColor">@color/dark</item>
    </style>
</resources>