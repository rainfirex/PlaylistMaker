<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Guideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ImageTrack">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_26</item>
        <item name="android:src">@drawable/ic_album_image_placeholder_312</item>
    </style>

    <style name="TextViewTrackName">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_24</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="TextViewTrackNameColor" parent="TextViewTrackName">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="TextViewArtistName">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_12</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="TextViewArtistNameColor" parent="TextViewArtistName">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="ImageAdd">
        <item name="android:layout_width">@dimen/dp_51</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_54</item>
        <item name="android:src">@drawable/ic_btn_add_51</item>
    </style>

    <style name="ImagePlay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_38</item>
        <item name="android:src">@drawable/ic_play_83</item>
    </style>

    <style name="ImageFavourite">
        <item name="android:layout_width">@dimen/dp_51</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_btn_favourite_51</item>
    </style>

    <style name="TextViewTrackTimer">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_12</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="TextViewTrackTimerColor" parent="TextViewTrackTimer">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="Barrier">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewTrackBaseProperty">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextViewTrackBaseValue" parent="TextViewTrackBaseProperty">
        <item name="android:gravity">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
    </style>

    <style name="TextViewTrackDuration" parent="TextViewTrackBaseProperty">
        <item name="android:layout_marginTop">@dimen/dp_30</item>
    </style>
    <style name="TextViewTrackDurationColor" parent="TextViewTrackDuration">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextViewTrackAlbumName" parent="TextViewTrackBaseProperty">
        <item name="android:layout_marginTop">@dimen/dp_17</item>
    </style>
    <style name="TextViewTrackAlbumNameColor" parent="TextViewTrackAlbumName">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextViewTrackReleaseDate" parent="TextViewTrackBaseProperty">
        <item name="android:layout_marginTop">@dimen/dp_17</item>
    </style>
    <style name="TextViewTrackReleaseDateColor" parent="TextViewTrackReleaseDate">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextViewTrackGenre" parent="TextViewTrackBaseProperty">
        <item name="android:layout_marginTop">@dimen/dp_17</item>
    </style>
    <style name="TextViewTrackGenreColor" parent="TextViewTrackGenre">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextViewTrackCountry" parent="TextViewTrackBaseProperty">
        <item name="android:layout_marginTop">@dimen/dp_17</item>
    </style>
    <style name="TextViewTrackCountryColor" parent="TextViewTrackCountry">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextViewTrackDurationValue" parent="TextViewTrackBaseProperty">
    </style>
    <style name="TextViewTrackDurationValueColor" parent="TextViewTrackDurationValue">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="TextViewTrackAlbumNameValue" parent="TextViewTrackBaseValue">
        <item name="android:layout_width">@dimen/dp_0</item>
    </style>
    <style name="TextViewTrackAlbumNameValueColor" parent="TextViewTrackAlbumNameValue">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="TextViewTrackReleaseDateValue" parent="TextViewTrackBaseProperty">
    </style>
    <style name="TextViewTrackReleaseDateValueColor" parent="TextViewTrackReleaseDateValue">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="TextViewTrackGenreValue" parent="TextViewTrackBaseProperty">
    </style>
    <style name="TextViewTrackGenreValueColor" parent="TextViewTrackGenreValue">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="TextViewTrackCountryValue" parent="TextViewTrackBaseProperty">
    </style>
    <style name="TextViewTrackCountryValueColor" parent="TextViewTrackCountryValue">
        <item name="android:textColor">@color/dark</item>
    </style>
</resources>