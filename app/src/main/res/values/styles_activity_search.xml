<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SearchEditText">
        <item name="android:drawableStart">@drawable/ic_search_16</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_36</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:drawablePadding">@dimen/dp_4</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_28</item>
        <item name="android:background">@drawable/edit_search_radius</item>
    </style>

    <style name="SearchEditTextColor" parent="SearchEditText">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="SearchClearImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:src">@drawable/ic_clear_16</item>
        <item name="android:scaleType">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SearchImageCover">
        <item name="android:layout_width">@dimen/dp_45</item>
        <item name="android:layout_height">@dimen/dp_45</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginEnd">@dimen/dp_8</item>
        <item name="android:layout_marginStart">@dimen/dp_13</item>
        <item name="android:layout_marginVertical">@dimen/dp_8</item>
        <item name="android:src">@drawable/ic_track_placeholder_45</item>
    </style>

    <style name="TextViewTrack">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextViewTrackColor" parent="TextViewTrack">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewInfoArtist">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">250dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextViewInfoArtistColor" parent="TextViewInfoArtist">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="SearchImageDelimiter">
        <item name="android:layout_width">@dimen/dp_13</item>
        <item name="android:layout_height">@dimen/dp_13</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/ic_circle_13</item>
    </style>

    <style name="TextViewInfoTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_1</item>
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextViewInfoTimeColor" parent="TextViewInfoTime">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="SearchImageForward">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_8</item>
        <item name="android:layout_marginEnd">@dimen/dp_12</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/ic_arrow_forward_24</item>
    </style>

    <style name="SearchFailImageView">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginTop">102dp</item>
        <item name="android:src">@drawable/ic_nothing_found_120</item>
    </style>

    <style name="TextViewFail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>
        <item name="android:layout_marginHorizontal">@dimen/dp_24</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_19</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TextViewFailColor" parent="TextViewFail">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="ButtonFailUpdate" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_24</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:text">@string/btn_update</item>
        <item name="cornerRadius">@dimen/dp_54</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonFailUpdateColor" parent="ButtonFailUpdate">
        <item name="android:backgroundTint">@color/dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewYourSearch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp_24</item>
        <item name="android:layout_marginBottom">@dimen/dp_20</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/sp_19</item>
    </style>

    <style name="TextViewYourSearchColor" parent="TextViewYourSearch">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="ButtonClearHistory" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp_24</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="cornerRadius">@dimen/dp_54</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonClearHistoryColor" parent="ButtonClearHistory">
        <item name="android:backgroundTint">@color/dark</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>