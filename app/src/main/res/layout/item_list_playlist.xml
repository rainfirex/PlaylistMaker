<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|start"
    android:id="@+id/layout">

    <ImageView
        style="@style/ImageViewPlaylist"
        android:id="@+id/imgPlaylist"
        android:contentDescription="@string/image_description" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            style="@style/TextViewNamePlaylistColor"
            android:id="@+id/txtNamePlaylist"
            tools:text="Best song 2021"/>
        <TextView
            style="@style/TextViewPlaylistCountColor"
            android:id="@+id/txtPlaylistCount"
            tools:text="0 Tracks"/>
    </LinearLayout>


</LinearLayout>