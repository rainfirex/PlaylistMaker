<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">
        <ImageView
            style="@style/ButtonBackActivity"
            android:id="@+id/btnBack"
            android:src="@drawable/ic_arrow_back_24"
            android:contentDescription="@string/setting_title"/>
        <FrameLayout
            android:layout_width="208dp"
            android:layout_height="48dp"
            android:layout_marginVertical="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:text="@string/search_title"
                android:textSize="22sp"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/ys_display_medium"
                android:layout_gravity="center_vertical"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_height="52dp"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/edit_search_radius"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"
            tools:ignore="UselessParent">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:contentDescription="@string/hint_edit_search"
                android:src="@drawable/ic_search_16"
                android:layout_marginStart="12dp"
                android:layout_marginVertical="10dp"/>

            <EditText
                android:id="@+id/EditTextSearch"
                android:layout_width="0dp"
                android:layout_height="29dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:hint="@string/hint_edit_search"
                android:textColorHint="@color/color_hint_edit_text"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="4dp"
                android:paddingEnd="0dp"
                android:textColor="@color/color_btn"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="@dimen/search_edittext_size"
                android:textCursorDrawable="@drawable/cursor_edit_search"
                android:importantForAutofill="no"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    style="@style/SearchImageView"
                    android:contentDescription="@string/image_description"/>
                <ImageView
                    style="@style/SearchImageView"
                    android:contentDescription="@string/image_description"/>
                <ImageView
                    style="@style/SearchImageView"
                    android:contentDescription="@string/image_description"/>
                <ImageView
                    style="@style/SearchImageView"
                    android:id="@+id/ButtonClearSearch"
                    android:src="@drawable/ic_clear_16"
                    android:contentDescription="@string/image_description"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>