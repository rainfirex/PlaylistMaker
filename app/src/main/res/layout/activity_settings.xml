<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_setting_activity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginVertical="4dp"
            android:contentDescription="@string/setting_title"
            android:src="@drawable/arrowback"
            android:scaleType="center"
            android:foreground="?attr/selectableItemBackground"/>
        <FrameLayout
            android:layout_width="208dp"
            android:layout_height="48dp"
            android:layout_marginVertical="4dp"            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:text="@string/setting_title"
                android:textColor="@color/color_mnu"
                android:textSize="22sp"
                android:layout_gravity="center_vertical"/>
        </FrameLayout>

    </LinearLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/setting_mnu_theme"
            android:textSize="@dimen/setting_mnu_size"
            android:textColor="@color/color_mnu"
            android:layout_marginStart="@dimen/setting_mnu_text_margin_start"
            android:layout_marginVertical="@dimen/setting_mnu_text_margin_vertical"/>

        <Switch
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginStart="298dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="11dp"
            android:layout_marginEnd="6dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/setting_mnu_shared"
            android:textSize="@dimen/setting_mnu_size"
            android:textColor="@color/color_mnu"
            android:layout_marginStart="@dimen/setting_mnu_text_margin_start"
            android:layout_marginVertical="@dimen/setting_mnu_text_margin_vertical"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:contentDescription="@string/setting_mnu_shared"
            android:src="@drawable/share"
            android:layout_marginStart="@dimen/setting_mnu_ico_margin_start"
            android:layout_marginEnd="@dimen/setting_mnu_ico_margin_end"
            android:layout_marginTop="@dimen/setting_mnu_ico_margin_top"
            android:layout_marginBottom="@dimen/setting_mnu_ico_margin_bottom"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/setting_mnu_support"
            android:textSize="@dimen/setting_mnu_size"
            android:textColor="@color/color_mnu"
            android:layout_marginStart="@dimen/setting_mnu_text_margin_start"
            android:layout_marginVertical="@dimen/setting_mnu_text_margin_vertical"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:contentDescription="@string/setting_mnu_support"
            android:src="@drawable/support"
            android:layout_marginStart="@dimen/setting_mnu_ico_margin_start"
            android:layout_marginEnd="@dimen/setting_mnu_ico_margin_end"
            android:layout_marginTop="@dimen/setting_mnu_ico_margin_top"
            android:layout_marginBottom="@dimen/setting_mnu_ico_margin_bottom"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/setting_mnu_agree"
            android:textSize="@dimen/setting_mnu_size"
            android:textColor="@color/color_mnu"
            android:layout_marginStart="@dimen/setting_mnu_text_margin_start"
            android:layout_marginVertical="@dimen/setting_mnu_text_margin_vertical"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:contentDescription="@string/setting_mnu_agree"
            android:src="@drawable/arrowforward"
            android:layout_marginStart="@dimen/setting_mnu_ico_margin_start"
            android:layout_marginEnd="@dimen/setting_mnu_ico_margin_end"
            android:layout_marginTop="@dimen/setting_mnu_ico_margin_top"
            android:layout_marginBottom="@dimen/setting_mnu_ico_margin_bottom"
            />
    </FrameLayout>
</LinearLayout>